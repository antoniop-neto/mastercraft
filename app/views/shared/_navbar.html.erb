<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dsnkrdlih/image/upload/v1711117665/Screenshot_2024-03-22_at_14.23.55_lx9t3p.png" %>
    <% end %>


    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <% if user_signed_in? && current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "User avatar" %>
      <% else %>
        <%= image_tag "https://res.cloudinary.com/dsnkrdlih/image/upload/v1710449263/Screenshot_2024-03-14_at_20.46.51_nbubyh.png", class: "avatar", alt: "Default avatar" %>
      <% end %>
    </a>

    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
      <% if user_signed_in? %>
        <%= link_to "My Appointments", bookings_appointments_path, class: "dropdown-item" %>
        <%= link_to "Client Bookings", bookings_path, class: "dropdown-item" %>
        <% if current_user.provider? %>
          <%= link_to "My Services", manage_services_path, class: "dropdown-item" %>
        <% end %>
        <%= link_to "Manage Profile", edit_user_registration_path, class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
      <% end %>
    </div>
  </div>
</div>

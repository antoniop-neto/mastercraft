<div class="main-container">
  <div class="row justify-content-center my-3 mx-2">
    <div class="col-sm-8">
      <%= form_with url: users_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control form-input",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-dark dark-button" %>
      <% end %>
    </div>
  </div>
  <div class="container mx-2">
    <div class="container-cards">
      <% @users.each do |user| %>
        <% if user.provider == true %>
        <%= link_to user_path(user), style: "text-decoration: none; color: black" do %>

            <div class="card-trip">
              <% if user.photo.attached? %>
                <%= cl_image_tag user.photo.key, height: 150, class: "card-image", crop: :fill %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2 class= "btn btn-dark dark-button m-2"><%= "#{user.first_name} #{user.last_name}" %></h2>
                  <p>Address: <%= user.services[0].address %></p>
                  <p>Services:
                    <% user.services.each do |service| %>
                      <%= service.name %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="button-container">
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
  <div class="container">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

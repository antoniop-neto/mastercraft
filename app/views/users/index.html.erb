<div class="main-container">
  <div class="row justify-content-center my-3 mx-2">
    <div class="col-sm-8">
      <%= form_with url: users_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control form-input",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-dark dark-button" %>
      <% end %>
    </div>
  </div>
  <div class="container mx-2">
    <div class="container-cards">
      <% @users.each do |user| %>
        <% if user.provider == true %>
        <%= link_to user_path(user), style: "text-decoration: none; color: black" do %>
            <div class="card-trip dark-gray-background">
              <div class="card-trip-infos">
                <h2 class= "btn btn-dark dark-button m-2"><%= "#{user.first_name} #{user.last_name}" %></h2>
                <div class = "user-info">
                  <div class = "user-avatar">
                    <% if user.photo.attached? %>
                      <%= cl_image_tag user.photo.key, class: "avatar", alt: "User avatar", crop: :fill %>
                    <% else %>
                      <%= image_tag "https://res.cloudinary.com/dsnkrdlih/image/upload/v1710449263/Screenshot_2024-03-14_at_20.46.51_nbubyh.png", class: "avatar", alt: "Default avatar" %>
                    <% end %>
                  </div>
                  <div class = "user-details">
                    <p style="color: white;"><%= user.services[0].address %></p>
                    <div class="rating-stars">
                      <%= "#{'â˜…' * user.rating}" %>
                    </div>
                    <p style="color: white;">
                      <% user.services.each do |service| %>
                        <%= service.name %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
  <div class="container">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

<div class="container">
  <h3><%= "Welcome #{@user.first_name} #{@user.last_name}," %></h3>
  <% if @services.length > 0 %>
  <h4>Your Services</h4>
  <% else %>
    <h4>You don't have any services yet.</h4>
  <% end %>

  <%= link_to "Create Service", new_service_path, class: "btn btn-info me-2" %>

<div class="container-cards">
    <% @services.each do |service| %>
    <div class="card-services">
      <h2 style="text-align: center;"><%= service.name %></h2>
          <p><%= "Price: #{service.price}" %></p>
          <p><%= "Address: #{service.address}" %></p>
          <%= link_to service_path(service), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn-delete" do %>
            <i class="fa-solid fa-trash"></i>
      </div>
      <% end %>
      <% end %>
  </div>

</div>

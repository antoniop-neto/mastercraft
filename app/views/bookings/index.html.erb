<div class="container">
  <h3><%= "Welcome #{@user.first_name} #{current_user.last_name}," %></h3>
  <% if @user.bookings.length > 0 %>
  <h4>Your Client Bookings</h4>
  <% else %>
    <h4>You don't have any client bookings yet.</h4>
  <% end %>
  <br>

  <div class="card-product-container">
    <% @user.bookings.each do |booking| %>
    <div class="card-trip">

        <strong><%= booking.service.name %></strong>

        <div class="card-trip-infos">
          <ul>
            <p><%= "Date: #{booking.date.strftime('%B %d, %Y')}" %></p>
            <p><%= "Start Hour: #{booking.start_hour}:00" %></p>
            <p><%= "Customer: #{booking.user.first_name} #{booking.user.last_name} " %></p>
            <h2>
              <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-primary" %>
              <%= link_to booking_path(booking), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , class: "btn btn-danger" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
            </h2>
          </ul>
        </div>

    </div>
    <% end %>
  </div>
</div>
